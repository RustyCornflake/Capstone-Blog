<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>New Muscle Moment</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
</head>
<body class="bg-dark text-light">
  <header class="bg-black text-white py-4 text-center">
    <h1 class="fw-bold">New Muscle Moment</h1>
  </header>

  <main class="container my-5">
    <form action="/new" method="POST" class="bg-secondary p-4 rounded shadow">
      <div class="mb-3">
        <label for="title" class="form-label text-warning">Title</label>
        <input type="text" class="form-control" id="title" name="title" placeholder="My First Burnout" required>
      </div>
      <div class="mb-3">
        <label for="content" class="form-label text-warning">Story</label>
        <textarea class="form-control" id="content" name="content" rows="6" placeholder="Describe your V8-powered adventure..." required></textarea>
      </div>
      <button type="submit" class="btn btn-warning">Post It</button>
    </form>
  </main>
</body>
</html>